<body class="bistro">

<div class="jumbotron" id="jumbo">
  <h1 class="text-center">Burger Bistro</h1>
</div>

<div class="row text-center">
  <div class="col-md-12">
    <h2>Order your Favorite Burger</h2>

    <form class="create-form">
      <div class="form-group">
        <label for="burgerName" id="name">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
      </div>

      <button type="submit" id="submit">Submit Burger Order</button>
    </form>
  </div>
</div>
<br><br>
<div class="row">
  <div class="col-md-6">
    <h2 class="text-center" id="eaten">Burgers Ready to be Eaten:</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour = true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-6">
    <h2 class="text-center" id="eaten">Burgers Devoured:</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour = false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>